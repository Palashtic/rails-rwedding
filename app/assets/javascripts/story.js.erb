jQuery(document).ready(function(){
  if($('#video-story').length !== 0) {
    jwplayer('video-story').setup({
      flashplayer: '<%= asset_path("jwplayer/jwplayer.flash.swf") %>',
      image: '<%= asset_path("video-snapshot.png") %>',
      file: '<%= asset_path("our-story.mp4") %>',
      height: 506,
      width: 900,
      controlbar: {position:'over', 
                   idlehide: false,
                   visible: true},
    });
  }
});
